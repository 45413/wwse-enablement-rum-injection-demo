{
    "manifest_version": 2,
    "name": "Dynatrace RUM Injector",
    "description": "Simulate Dynatrace RUM JS Tag Injection",
    "version": "0.1",
    "permissions": [
        "tabs",
        "storage",
        "<all_urls>"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "icons": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "browser_action": {
        "default_icon": "icon-128.png",
        "default_popup": "options.html"
    }
    
}